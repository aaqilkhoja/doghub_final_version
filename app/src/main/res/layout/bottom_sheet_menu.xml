<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="44dp"
        android:id="@+id/cv_edit_prof">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_baseline_edit_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_edit_24"

            android:paddingLeft="10dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="44dp"
        android:id="@+id/cv_delete">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"

            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:paddingLeft="10dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="44dp"
        android:id="@+id/cv_logout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_power_settings_new_24"
            android:paddingLeft="10dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>